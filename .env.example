# Citadel Agent Configuration
# Copy this file to .env and update values as needed

# Application Configuration
APP_NAME=Citadel Agent
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
APP_TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=citadel
DB_PASSWORD=changeme
DB_NAME=citadel_agent
DB_SSL_MODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-jwt-secret
JWT_REFRESH_EXPIRES_IN=720h

# API Keys (for external services)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
HUGGINGFACE_API_KEY=
GOOGLE_AI_API_KEY=

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Security
SECURE_COOKIES=false
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# AI Model Paths
AI_LLAMA_MODEL_PATH=./ai-models/llm/llama-3.2-3b.gguf
AI_MISTRAL_MODEL_PATH=./ai-models/llm/mistral-7b-q4.gguf
AI_CLIP_MODEL_PATH=./ai-models/vision/clip-vit-b32.onnx
AI_WHISPER_MODEL_PATH=./ai-models/speech/whisper-base.bin

# File Upload Limits
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=json,csv,txt,pdf,doc,docx,xlsx
TEMP_FILE_DIR=/tmp/citadel_uploads

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=info
LOKI_URL=

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@citadel-agent.com

# External Service Endpoints
EXTERNAL_API_TIMEOUT=30s
MAX_CONCURRENT_AI_REQUESTS=10

# Development
DEV_AUTO_RELOAD=true
DEV_PROFILING=false