# Citadel Agent Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=citadel_agent

# API Server
SERVER_PORT=5001
API_VERSION=v1
ENVIRONMENT=development

# Security (CHANGE THESE FOR PRODUCTION!)
JWT_SECRET=replace_this_with_a_very_long_random_string_for_production
JWT_EXPIRY=3600

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_OUTPUT=stdout

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:5001/auth/oauth/github/callback

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5001/auth/oauth/google/callback

# Worker Configuration
WORKER_COUNT=4
WORKER_TIMEOUT=1800

# Scheduler Configuration
SCHEDULER_INTERVAL=60

# Development-specific variables
NODE_ENV=development
DEBUG=true

# Additional settings
MAX_UPLOAD_SIZE=10485760
SESSION_TIMEOUT=3600