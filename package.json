{
  "name": "citadel-agent",
  "version": "1.0.0",
  "bin": {
    "citadel-agent": "./scripts/citadel-agent.js"
  },
  "description": "A powerful workflow automation engine with AI agent capabilities",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd backend && go run cmd/api/main.go",
    "dev:web": "cd frontend && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd backend && go build -o ../bin/api cmd/api/main.go",
    "build:web": "cd frontend && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cd backend && go test ./internal/...",
    "test:integration": "cd backend && go test -v ./test/integration/...",
    "docker:build": "docker-compose -f docker/compose/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/compose/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/compose/docker-compose.yml down",
    "citadel-agent": "node ./scripts/citadel-agent.js"
  },
  "keywords": [
    "workflow",
    "automation",
    "ai",
    "agent",
    "n8n",
    "prefect",
    "temporal"
  ],
  "author": "Citadel Agent Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}